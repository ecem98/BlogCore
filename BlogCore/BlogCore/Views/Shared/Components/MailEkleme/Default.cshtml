@model EntityLayer.Concrete.NewsLetter


<div class="tech-btm">
    
    <p>Yeni eklenen bloglardan haberdar olun... </p>
    <div>
        <form asp-controller="NewsLetter" asp-action="SaveCustomer" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#CustomerList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <input asp-for="Mail" class="form-control" placeholder="Mail Adresi" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Abone Ol" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>




@using EntityLayer.Concrete
@model List<Blog>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="tech-btm">
    <h4>Yazarın Diğer Yazıları</h4>
    @foreach (var item in Model)
    {
       
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogReadAll/@item.BlogID">
                    <img src="@item.BlogThumbnailImage" class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="/Blog/BlogReadAll/@item.BlogID">@item.BlogTitle </a>

                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @(((DateTime) item.BlogCreatingDate).ToString("dd-MMM-yy"))
                    </span>
                </div>
            </div>

        </div>
    }
    <a href="/Blog/WritersBlogList/@ViewBag.id" class="btn btn-primary read-m">Yazarın diğer yazılarını gör...</a>

</div>

@model EntityLayer.Concrete.NewsLetter

<div class="tech-btm">
    <h4>Mail bültenine abone olun</h4>
    <p>Yeni eklenen bloglardan haberdar olun... </p>
    <div>
        <form asp-action="SaveCustomer" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#CustomerList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <input asp-for="Mail" class="form-control" placeholder="Email" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>





